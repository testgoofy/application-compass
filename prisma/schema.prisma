datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Position {
  id           Int       @id @default(autoincrement())
  bk           String    @default(uuid())
  title        String
  notes        String?
  requirements String?
  description  String?
  salary       Int?
  company      String
  status       String
  valid_from   DateTime  @default(now())
  valid_to     DateTime?
  deleted_at   DateTime?

  @@unique([bk, valid_from])
  @@unique([bk, valid_to])
  @@map("positions")
}
